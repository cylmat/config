{
    "name": "cylmat/phpconfig",
    "type": "configuration",
    "description": "Php configuration with unit-tests and pre-configured dependencies",
    "license": "Apache-2.0",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=7.3",
        "ext-ctype": "*",
        "ext-iconv": "*"
    },
    "require-dev": {
        "behat/behat": "^3.8",
        "brianium/paratest": "^6.2",
        "ergebnis/composer-normalize": "^2.13",
        "friendsofphp/php-cs-fixer": "^2.18",
        "nikic/php-parser": "^4.10",
        "pestphp/pest": "^1.0",
        "phan/phan": "^4.0",
        "phing/phing": "^2.16",
        "php-parallel-lint/php-parallel-lint": "^1.2",
        "phpmd/phpmd": "^2.9",
        "phpro/grumphp": "^1.3",
        "phpspec/phpspec": "^7.0",
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": "^9.5",
        "phpunitgen/console": "^1.3",
        "phpunitgen/core": "^1.1",
        "sebastian/phpcpd": "^6.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    }
}
