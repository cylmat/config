{
    "name": "my/name",
    "type": "project",
    "license": "free",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7",
        "ext-ctype": "*",
        "ext-iconv": "*"
    },
    "require-dev": {
        "behat/behat": "^3.8",
        "brianium/paratest": "^6.2",
        "ergebnis/composer-normalize": "^2.13",
        "friendsofphp/php-cs-fixer": "^2.18",
        "friendsoftwig/twigcs": ">=4",
        "infection/infection": "^0.21.0",
        "maglnet/composer-require-checker": "^3.1",
        "nikic/php-parser": "^4.10",
        "pestphp/pest": "^1.0",
        "phan/phan": "^4.0",
        "phing/phing": "^2.16",
        "php-parallel-lint/php-parallel-lint": "^1.2",
        "phpmd/phpmd": "^2.9",
        "phpspec/phpspec": "^7.0",
        "phpstan/phpstan": "^0.12.76",
        "phpunit/phpunit": "^9.5",
        "phpunitgen/console": "^1.3",
        "phpunitgen/core": "^1.1",
        "povils/phpmnd": "^2.3",
        "sebastian/phpcpd": "^6.0",
        "squizlabs/php_codesniffer": "^3.5",
        "vimeo/psalm": "^4.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "auto-scripts": {
            "assets:install %PUBLIC_DIR%": "cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    }
}