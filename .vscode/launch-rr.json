// .vscode/launch.json
/*
 * Remote
 *
 * Sources files on container's volume
 * Php running on same container
 *
 * ---
 * php_xdebug:
 *      image: php_with_xdebug
 *      volumes:
 *          - php_src_volume:/var/www/
 */
{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000
        }
    ]
}